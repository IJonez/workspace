#include <avr/io.h>
#include <stdint.h>

int main(void)
	{
	DDRD = 0b11111110; 		//  sets pin 0 and 1 as "1" (03 = 11)

	while(1)
		{


		if ( PIND & (1<<PD7) )  //Button gedrückt
		{
			PORTD |= (1<<PD6)

		}

		}
	return 0;
	}



